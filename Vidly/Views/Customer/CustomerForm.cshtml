@model Vidly.Models.CustomerViewModel

@{
    ViewBag.Title = "Customer Form";
}
<div class="p-3">

    <h1>Welcome! Please fill the details</h1>
</div>
@using (Html.BeginForm("Save", "Customer"))
{
    <div class="form-group">

        @Html.LabelFor(a => a.customer.Name, new { @class = "control-label"})
        @Html.TextBoxFor(a => a.customer.Name, new { @class = "form-control" })

    </div>

    <div class="form-group">

        @Html.LabelFor(a => a.customer.BirthDate, new { @class = "control-label" })
        @Html.TextBoxFor(a => a.customer.BirthDate, "{0:d MMM yyyy}",  new { @class = "form-control" })
        @*@Html.EditorFor(a => a.customer.BirthDate, new { @class = "form-control" }) --used when using Diplaydate dataformat annotation*@

    </div>
      
    <div class="form-group">

        @Html.LabelFor(a => a.customer.MembershipTypeId, new { @class = "control-label" })
        @Html.DropDownListFor(a => a.customer.MembershipTypeId, new SelectList(Model.membershipType, "Id", "Name"), "Select Membership Type", new { @class = "form-control" })
          
    </div>

<div class="pb-3 form-check">

    @Html.CheckBoxFor(a => a.customer.IsSubscribedToNewsletter, new { @class = "form-check-input", @id = "IsSubscribedToNewsletter" })
    @Html.LabelFor(a => a.customer.IsSubscribedToNewsletter, new { @class = "form-check-label" } )

</div>

    @Html.HiddenFor(a => a.customer.id)  @*To get an attribute but ensure it is invisible to the user*@

    <button type="submit" class="pt-3 btn btn-primary">Save</button>
}

