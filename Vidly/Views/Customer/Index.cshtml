@using Vidly.Models
@model List<Customers>

@{
    ViewBag.Title = "Customer";
}
<div class="pt-3">
    <h1>Customers</h1>

</div>
<div>
    @if(Model.Count == 0)
    {
        <p>We don't have any customer yet!</p>
    }
    <table>
        <tr>
            <th>Customer</th>
        </tr>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@Html.ActionLink(@customer.name, "Details", new { id = @customer.id})</td>
            </tr>
        }
            </table>
        </div>