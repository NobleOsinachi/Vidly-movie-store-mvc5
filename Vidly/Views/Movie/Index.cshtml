@using Vidly.Models
@model List<Movies>
@{
    ViewBag.Title = "Movie";
}
<div class="pt-3">
    <h1>Movies</h1>

</div>

<div class="mb-3">
    @Html.ActionLink("Add New Movie", "MovieForm", null, new { @class = "btn btn-primary" })
</div>

<div>
    @if (Model.Count == 0)
    {
        <p>We don't have any movie yet!</p>
    }
    <table>
        <tr>
            <th>Movie</th>
            <th>Genre</th>

        </tr>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@Html.ActionLink(@movie.Name, "Edit", new { id = @movie.id })</td>
                <td>@movie.Genre.GenreName</td>
            </tr>
        }
    </table>
</div>
