@using Vidly.Models
@model List<Movies>
@{
    ViewBag.Title = "Movie";
}
<div class="pt-3">
    <h1>Movies</h1>

</div>
<div>
    @if (Model.Count == 0)
    {
        <p>We don't have any movie yet!</p>
    }
    <table>
        <tr>
            <th>Movie</th>
        </tr>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@Html.ActionLink(@movie.name, "Details")</td>
            </tr>
        }
    </table>
</div>
